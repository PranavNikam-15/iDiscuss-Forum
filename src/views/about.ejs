<% layout('layouts/boilerplate') %>

<body class="d-flex flex-column min-vh-100">

    <main class="flex-grow-1">

      <div class="text-white bg-dark text-center py-3 mb-0">
        <h5 class="display-3"><i class="bi bi-chat-dots-fill"></i> About iDiscuss</h5>
        <p class="lead">A community-driven coding forum to learn, share, and grow together.</p>
      </div>

      <div class="container my-5">
        <div class="row align-items-center">
          <div class="col-md-6 animate__animated animate__fadeInLeft">
            <h3><i class="bi bi-bullseye text-dark"></i> Our Mission</h3>
            <p>
              At iDiscuss, we believe in growing as a community. Whether you're debugging your first program or solving
              advanced system design problems — you belong here!
            </p>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Ask technical
                questions</li>
              <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Get peer-reviewed
                answers</li>
              <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Share your knowledge
              </li>
              <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Build your developer
                profile</li>
            </ul>
          </div>
          <div class="col-md-6 text-center animate__animated animate__fadeInRight">
            <img src="/img/Idiscuss_logo.png" class="img-fluid" alt="Forum Collaboration">
          </div>
        </div>
      </div>

      <div class="bg-light py-5">
        <div class="container text-center">
          <div class="card shadow border-0 mx-auto" style="max-width: 500px;">
            <div class="card-body">
              <h4 class="card-title"><i class="bi bi-person-circle text-dark"></i> Made with ❤️ by Pranav Nikam</h4>
              <p class="card-text mb-2">Third Year CSE Student | Full Stack Developer</p>
              <a href="#" class="btn btn-outline-dark btn-sm mx-1">
                <i class="bi bi-github"></i> GitHub
              </a>
              <a href="#" class="btn btn-outline-dark btn-sm mx-1">
                <i class="bi bi-envelope"></i> Email
              </a>
            </div>
          </div>
        </div>
      </div>

    </main>
</body>