<% if(categories) { %>
<div class="row my-4">
  <% for(let i = 0; i < categories.length; i++) { %>
    <div class="col-md-4 my-3">
      <div class="card h-100 shadow-sm">
        <img src="/img/card-<%= i + 1 %>.jpg" class="card-img-top" alt="Category Image" style="height: 200px; object-fit: cover;">
        <div class="card-body">
          <h5 class="card-title">
            <a href="/categories/<%= categories[i].id %>" class="text-decoration-none text-dark">
              <%= categories[i].name %>
            </a>
          </h5>
          <p class="card-text">
            <%= categories[i].description.length > 85 ? categories[i].description.substring(0, 85) + "..." : categories[i].description %>
          </p>
          <a href="/categories/<%= categories[i].id %>" class="btn btn-outline-secondary">View Threads</a>
        </div>
      </div>
    </div>
  <% } %>
</div>
<% } %>